{
  "manifest_version": 2,
  "name": "Mitaka",
  "description": "OSINT friendly IOC (Indicator of Compromise) saerch tool",
  "version": "0.53.1",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "persistent": false,
    "scripts": ["js/vendor.js", "js/background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/vendor.js", "js/content.js"]
  }],
  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
    "https://urlscan.io/api/v1/*",
    "https://www.virustotal.com/vtapi/v2/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{9efc0280-b125-400e-b53d-2d09d7effab4}"
    }
  }
}
